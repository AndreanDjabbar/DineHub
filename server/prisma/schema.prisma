generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Table {
  id            String     @id @default(cuid())
  name          String
  capacity      Int        @default(2)
  qrcode        String?    @unique 
  sessions      Session[]
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  restaurant_id String
  restaurant    Restaurant @relation("RestaurantTables", fields: [restaurant_id], references: [id], onDelete: Cascade)
}

model Session {
  id          String        @id @default(cuid())
  table       Table         @relation(fields: [table_id], references: [id])
  table_id    String
  status      SessionStatus @default(ACTIVE)
  users       SessionUser[]
  cart_items  CartItem[]
  orders      Order[]
  created_at  DateTime      @default(now())
  ended_at    DateTime?
}

enum SessionStatus {
  ACTIVE
  CLOSED
}

model SessionUser {
  id         String     @id @default(cuid())
  session    Session    @relation(fields: [session_id], references: [id])
  session_id String
  uuid_token String     @unique
  name       String?
  orders     Order[]
  cart_items CartItem[]
  created_at DateTime   @default(now())
}

model MenuCategory {
  id            String     @id @default(cuid())
  name          String
  image         String? 
  items         MenuItem[]
  created_at    DateTime   @default(now())
  restaurant_id String
  restaurant    Restaurant @relation("RestaurantCategories", fields: [restaurant_id], references: [id], onDelete: Cascade)
}

model MenuItem {
  id           String       @id @default(cuid())
  name         String
  price        Int
  image        String?
  category     MenuCategory @relation(fields: [category_id], references: [id], onDelete: Cascade)
  category_id  String
  is_available Boolean      @default(true)
  add_ons      AddOn[]
  cart_items   CartItem[]
  order_items  OrderItem[]
  created_at   DateTime     @default(now())
}

model AddOn {
  id           String        @id @default(cuid())
  name         String
  min_select   Int           @default(0)
  max_select   Int?          
  menu_item    MenuItem      @relation(fields: [menu_item_id], references: [id], onDelete: Cascade)
  menu_item_id String
  options      AddOnOption[]
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
}

model AddOnOption {
  id          String           @id @default(cuid())
  name        String
  price       Int              @default(0)
  add_on      AddOn            @relation(fields: [add_on_id], references: [id], onDelete: Cascade)
  add_on_id   String
  cart_items  CartItemAddOn[]
  order_items OrderItemAddOn[]
  created_at  DateTime         @default(now())
  updated_at  DateTime         @updatedAt
}

model CartItem {
  id               String          @id @default(cuid())
  session          Session         @relation(fields: [session_id], references: [id])
  session_id       String
  user             SessionUser?    @relation(fields: [user_id], references: [id])
  user_id          String?
  menu_item        MenuItem        @relation(fields: [menu_item_id], references: [id])
  menu_item_id     String
  quantity         Int             @default(1)
  is_shared        Boolean         @default(true)
  selected_add_ons CartItemAddOn[]
  created_at       DateTime        @default(now())
}

model CartItemAddOn {
  id              String      @id @default(cuid())
  cart_item       CartItem    @relation(fields: [cart_item_id], references: [id], onDelete: Cascade)
  cart_item_id    String
  add_on_option   AddOnOption @relation(fields: [add_on_option_id], references: [id])
  add_on_option_id String
}

model Order {
  id          String       @id @default(cuid())
  session     Session      @relation(fields: [session_id], references: [id])
  session_id  String
  user        SessionUser? @relation(fields: [user_id], references: [id])
  user_id     String?
  items       OrderItem[]
  payments    Payment[]
  status      OrderStatus  @default(PENDING)
  total_price Int          @default(0)
  is_shared   Boolean      @default(false)
  created_at  DateTime     @default(now())
  paid_at     DateTime?
}

model OrderItem {
  id               String           @id @default(cuid())
  order            Order            @relation(fields: [order_id], references: [id])
  order_id         String
  menu_item        MenuItem         @relation(fields: [menu_item_id], references: [id])
  menu_item_id     String
  is_cooked        Boolean          @default(false)
  price            Int
  quantity         Int              @default(1)
  selected_add_ons OrderItemAddOn[]
}

model OrderItemAddOn {
  id               String      @id @default(cuid())
  order_item       OrderItem   @relation(fields: [order_item_id], references: [id], onDelete: Cascade)
  order_item_id    String
  add_on_option    AddOnOption @relation(fields: [add_on_option_id], references: [id])
  add_on_option_id String
  name             String      
  price            Int         
}

model Payment {
  id         String        @id @default(cuid())
  order      Order         @relation(fields: [order_id], references: [id])
  order_id   String
  amount     Int
  method     PaymentMethod
  status     PaymentStatus @default(PENDING)
  created_at DateTime      @default(now())
}

model Restaurant {
  id              String         @id @default(uuid())
  name            String         
  slug            String         @unique
  address         String?
  created_at      DateTime       @default(now())
  updated_at      DateTime       @updatedAt

  users           User[]         @relation("RestaurantUsers")
  tables          Table[]        @relation("RestaurantTables")
  menu_categories MenuCategory[] @relation("RestaurantCategories")
}

model User {
  id            String      @id @default(cuid())
  name          String
  email         String      @unique
  password      String
  role          Role        @default(USER)
  is_verified   Boolean     @default(false)
  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt

  restaurant_id String?     @map("restaurant_id")
  restaurant    Restaurant? @relation("RestaurantUsers", fields: [restaurant_id], references: [id], onDelete: Cascade)
}

model Subscription {
  id           String                      @id @default(cuid())
  brand_name   String
  url_slug     String                      @unique
  email        String                      @unique
  password     String
  address      String
  status       SubscriptionStatus          @default(PENDING)
  created_at   DateTime                    @default(now())
  updated_at   DateTime                    @updatedAt
  transactions Subscription_Transaction[]
}

model Subscription_Transaction {
  id                 String       @id @default(cuid())
  subscription_id    String
  subscription       Subscription @relation(fields: [subscription_id], references: [id], onDelete: Cascade)
  order_id           String       @unique                     
  gross_amount       Decimal      @db.Decimal(10,2)
  payment_method     String
  bank_name          String?
  payment_type       String?       
  transaction_status String?
  va_number          String
  fraud_status       String?
  status_code        String?
  payment_url        String?
  expiry_time        DateTime?
  created_at         DateTime     @default(now())
  updated_at         DateTime     @updatedAt
}


enum Role {
  Developer
  ADMIN
  CASHIER
  USER
  KITCHEN
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  READY
  SERVED
}

enum PaymentMethod {
  CASH
  QRIS
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  PENDING
  SUSPENDED
  CANCELLED
}
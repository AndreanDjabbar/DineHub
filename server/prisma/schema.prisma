generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Table {
  id           String     @id @default(cuid())
  name         String
  qrcode       String     @unique // Link identifier
  sessions     Session[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  restaurantId String     @map("restaurant_id")
  restaurant   Restaurant @relation("RestaurantTables", fields: [restaurantId], references: [id], onDelete: Cascade)
}

model Session {
  id        String        @id @default(cuid())
  table     Table         @relation(fields: [tableId], references: [id])
  tableId   String
  status    SessionStatus @default(ACTIVE)
  users     SessionUser[]
  cartItems CartItem[]
  orders    Order[]
  createdAt DateTime      @default(now())
  endedAt   DateTime?
}

enum SessionStatus {
  ACTIVE
  CLOSED
}

model SessionUser {
  id        String     @id @default(cuid())
  session   Session    @relation(fields: [sessionId], references: [id])
  sessionId String
  uuidToken String     @unique
  name      String?
  orders    Order[]
  cartItems CartItem[]
  createdAt DateTime   @default(now())
}

model MenuCategory {
  id           String     @id @default(cuid())
  name         String
  items        MenuItem[]
  createdAt    DateTime   @default(now())
  restaurantId String     @map("restaurant_id")
  restaurant   Restaurant @relation("RestaurantCategories", fields: [restaurantId], references: [id], onDelete: Cascade)
}

model MenuItem {
  id          String       @id @default(cuid())
  name        String
  price       Int
  image       String?
  category    MenuCategory @relation(fields: [categoryId], references: [id])
  categoryId  String
  isAvailable Boolean      @default(true)
  cartItems   CartItem[]
  orderItems  OrderItem[]
  createdAt   DateTime     @default(now())
}

model CartItem {
  id         String       @id @default(cuid())
  session    Session      @relation(fields: [sessionId], references: [id])
  sessionId  String
  user       SessionUser? @relation(fields: [userId], references: [id])
  userId     String?
  menuItem   MenuItem     @relation(fields: [menuItemId], references: [id])
  menuItemId String
  quantity   Int          @default(1)
  isShared   Boolean      @default(true)
  createdAt  DateTime     @default(now())
}

model Order {
  id         String       @id @default(cuid())
  session    Session      @relation(fields: [sessionId], references: [id])
  sessionId  String
  user       SessionUser? @relation(fields: [userId], references: [id])
  userId     String?
  items      OrderItem[]
  payments   Payment[]
  status     OrderStatus  @default(PENDING)
  totalPrice Int          @default(0)
  isShared   Boolean      @default(false)
  createdAt  DateTime     @default(now())
  paidAt     DateTime?
}

model OrderItem {
  id         String   @id @default(cuid())
  order      Order    @relation(fields: [orderId], references: [id])
  orderId    String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  menuItemId String
  is_cooked  Boolean  @default(false)
  price      Int
  quantity   Int      @default(1)
}

model Payment {
  id        String        @id @default(cuid())
  order     Order         @relation(fields: [orderId], references: [id])
  orderId   String
  amount    Int
  method    PaymentMethod
  status    PaymentStatus @default(PENDING)
  createdAt DateTime      @default(now())
}

model Restaurant {
  id              String         @id @default(uuid())
  name            String         
  slug            String         @unique
  address         String?
  created_at      DateTime       @default(now())
  updated_at      DateTime       @updatedAt

  users           User[]         @relation("RestaurantUsers")
  tables          Table[]        @relation("RestaurantTables")
  menuCategories  MenuCategory[] @relation("RestaurantCategories")
}

model User {
  id            String         @id @default(cuid())
  name          String
  email         String         @unique
  password      String
  role          Role           @default(USER)
  is_verified   Boolean        @default(false)
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt

  restaurantId  String?        @map("restaurant_id")
  restaurant    Restaurant?    @relation("RestaurantUsers", fields: [restaurantId], references: [id], onDelete: Cascade)
}

model Subscription {
  id           String                      @id @default(cuid())
  brand_name   String
  url_slug     String                      @unique
  email        String                      @unique
  password     String
  address      String
  status       SubscriptionStatus          @default(PENDING)
  created_at   DateTime                    @default(now())
  updated_at   DateTime                    @updatedAt
  transactions Subscription_Transaction[]
}

model Subscription_Transaction {
  id                 String        @id @default(cuid())
  subscription_id    String
  subscription       Subscription  @relation(fields: [subscription_id], references: [id], onDelete: Cascade)
  order_id           String        @unique            
  transaction_id     String?       @unique            
  gross_amount       Int
  payment_method     String
  bank_name          String?
  payment_type       String?       
  transaction_status String?
  fraud_status       String?
  status_code        String?
  payment_url        String?
  expiry_time        DateTime?
  created_at         DateTime      @default(now())
  updated_at         DateTime      @updatedAt
}


enum Role {
  Developer
  ADMIN
  CASHIER
  USER
  KITCHEN
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  READY
  SERVED
}

enum PaymentMethod {
  CASH
  QRIS
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  PENDING
  SUSPENDED
  CANCELLED
}